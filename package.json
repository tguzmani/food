{
  "name": "food-backend",
  "version": "1.0.0",
  "engines": {
    "node": "18.9"
  },
  "description": "A calorie and body measure tracker",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "server": "nodemon app",
    "client": "npm start --prefix client",
    "clientinstall": "npm install --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --legacy-peer-deps --prefix client && npm run build --prefix client",
    "new-model": "node ./framework/newModel",
    "new-controller": "node ./framework/newController",
    "new-routes": "node ./framework/newRoutes",
    "new-redux-files": "node ./framework/newReduxFiles",
    "connect-redux": "node ./framework/connectRedux"
  },
  "author": "Tomás Guzmán <tomasg92@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-validator": "^6.4.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.4",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^5.1.0"
  }
}
